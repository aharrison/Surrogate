<h1>Listing images</h1>

<table style="align: center" border='1' cellpadding='0' cellspacing='0'>
  <tr>
    <th>Name</th>
    <th>Thumbnail<th>
    <th>Album</th>
    <th>Height</th>
    <th>Width</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.name %></td>
    <td><img src="/images/<%=image.id.to_s + '_thumbnail.jpg' %>" height=100> </td>
    <td><%= image.height %></td>
    <td><%= image.width %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>

<% end %>

</table>

<div>
  <%= will_paginate @images %>
</div>

<br />

<%= link_to 'New Image', new_image_path %>
